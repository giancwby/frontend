---
//style imports
import '../styles/global.css';
import '../styles/typography.css';

//component imports
import Logo from './Logo.astro';
import MenuLink from './MenuLink.astro';
---

<main id="navMenu">
    <section>
        <a href="/"><Logo color='white'/></a>
        <div>
            <h3 id="closeMenu">Close</h3>
        </div>
    </section>
    <section>
        <MenuLink href='/about' number='01' text='About'/>
        <MenuLink href='https://www.instagram.com/coolnewcrap/' number='02' text='Cool New Crap'/>
    </section>
    <section>
        <h3>Contact</h3>
        <a href="mailto:hello@graar.ph" class="small-body" target="_blank">Email: hello@graar.ph</a>
        <a href="https://www.instagram.com/graarph/?hl=en" target="_blank" class="small-body">Instagram: @graarph</a>
        <div>
            <p class="small-body">All Rights Reserved</p>
            <p class="small-body">©2023</p>
        </div>
    </section>
    <section>
        <img src="/gif/mascot-gif-white.gif" alt="GRAAR Mascot">
        <div>
            <p class="small-body">All Rights Reserved</p>
            <p class="small-body">©2023</p>
        </div>
    </section>
</main>

<style>
    a {
        text-decoration: none;
    }

    main {
        background-color: black;
        color: white;
        padding: 24px;
        height: 95vh;
        width: 100vw;
        min-height: 100%;
        box-sizing: border-box;
        overflow-x: hidden;
        overflow-y: hidden;

        display: flex;
        flex-direction: column;
        justify-content: space-between;

        transition: all ease-in-out .2s;
        z-index: 99;

        position: fixed;
        top: 0;
        left: 2000px;
        opacity: 0;

        > section {
            height: fit-content;
        }

        > section:nth-child(1) {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            position: relative;
            align-items: center;
            grid-area: nav;

            > div {
                position: relative; ;
                cursor: pointer;

                &:after {
                    content: '';
                    position: absolute;
                    width: 100%;
                    transform: scaleX(0);
                    height: 2px;
                    bottom: 0;
                    left: 0;
                    background-color: white;
                    transform-origin: bottom right;
                    transition: transform 0.15s ease-out;  
                }
                &:hover:after {
                    transform: scaleX(1);
                    transform-origin: bottom left;
                }
            }
        }

        > section:nth-child(2) {
            display: flex;
            flex-direction: column;
            gap: 24px;
            grid-area: links;
        }

        > section:nth-child(3) {
            display: flex;
            flex-direction: column;
            gap: 16px;
            grid-area: contact;

            > a {
                color: white;
            }

            > div {
                display: none;
            }
        }

        > section:nth-child(4) {
            grid-area: gif;

            > img {
                margin-bottom: 10px;
            }

            > div {
                display: flex;
                flex-direction: row;
                justify-content: space-between;
            }

        }
    }

    @media (width >= 900px) {
        main {
            padding: 40px 80px 64px 80px;
            height: 90vh;
            display: grid;
            grid-template-columns: 2fr 1fr;
            grid-template-rows: auto;
            grid-template-areas: 
            "nav nav"
            "links links"
            "gif contact";
            
            > section:nth-child(1), section:nth-child(3) {
                > div > h3 {
                    font-size: var(--h2);
                }
            }

            > section:nth-child(3) {
                gap: 24px;
                align-self: end;

                > a, p {
                    font-size: var(--large-body);
                }

                > div {
                    display: flex;
                    flex-direction: row;
                    justify-content: space-between;
                    margin-top: 64px;

                    > p {
                        font-size: var(--small-body); 
                    }
                }
            }

            > section:nth-child(4) {
                align-self: end;

                > img {
                    margin-bottom: 0px;
                    width: 450px;
                }

                > div {
                    display: none;
                }
            }  
        }
    }
</style>