---
interface Props {
    number: string
    name: string,
    subheading: string,
    cost: Array<string>,
    image: string,
    imageAlt,
    imageMobileWidth: string,
    imageTabletWidth: string,
    imageDesktopWidth: string
}

const {
    number,
    name,
    subheading,
    cost,
    image,
    imageAlt,
    imageMobileWidth,
    imageTabletWidth,
    imageDesktopWidth
} = Astro.props as Props
---

<div class="wrapper">
    <div class="__header">
        <div class="__title">
            <p class="body">{number}</p>
            <h3 class="header">{name}</h3>
            <p class="body">01</p>
        </div>
        <p class="body">{subheading}</p>
    </div>
    <img src={image} alt={imageAlt}>
    <div class="__cost">
        {cost.map((cost) => (
            <p class="body">{cost}</p>
        ))}
    </div>
    <a href="http://bit.ly/order-crap" target="_blank" class="body __button">
        <p>Pre-Order</p>
