<style>
    main {
        background-color: black;
        color: white;
        height: 100vh;
        padding: 24px;

        > section:nth-child(1) {
            display: flex;
            flex-direction: column;
            gap: 80px;

            > div:nth-child(1) {
                display: flex;
                flex-direction: row;
                justify-content: space-between;
            }

            > div:nth-child(2) {
                display: flex;
                flex-direction: column;
                gap: 80px;

                > div:nth-child(1) {
                    display: flex;
                    flex-direction: column;
                    gap: 24px;
                }

                > div:nth-child(2) {
                    display: flex;
                    flex-direction: column;
                    gap: 16px;
                }
            }
        }

        > section:nth-child(2) {
            > div {
                display: flex;
                flex-direction: row;
                justify-content: space-between;
            }
        }
    }
</style>