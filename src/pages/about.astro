<style>
    main {
        display: flex;
        flex-direction: column;
        gap: 160px;
        margin: 56px 0px;

        > section {
            padding: 0 24px;
        }

        > section:nth-child(1) {
            display: flex;
            flex-direction: column;
            gap: 80px;

            > h1 {
                font-size: var(--h2);
            }

            > div {
                display: flex;
                flex-direction: column;
                gap: 80px;

                > div {
                    display: flex;
                    flex-direction: column;
                    gap: 24px;

                    > div {
                        display: flex;
                        flex-direction: row;
                        justify-content: space-between;

                        > div {
                            display: flex;
                            flex-direction: column;
                            gap: 16px;
                        }
                    }
                }
            }
        }

        > section:nth-child(2) {
            display: flex;
            flex-direction: column;
            gap: 32px;
            
            > div {
                > h2:nth-child(1) {
                    font-size: var(--h3);
                }
                > h2:nth-child(2) {
                    font-size: var(--h1);
                }
            }
        }

        > section:nth-child(3) {
            display: flex;
            flex-direction: column;
            gap: 80px;
            align-items: center;

            > div:nth-child(1) {
                display: flex;
                flex-direction: column;
                gap: 80px;
                
                > div {
                    > img {
                        width: 200px;
                        height: 256px;
                    }

                    > div {
                        display: flex;
                        flex-direction: column;
                        gap: 8px;
                    }
                }

                > div:nth-child(odd) {
                    display: flex;
                    flex-direction: row;
                    gap: 24px;  
                }

                > div:nth-child(even) {
                    display: flex;
                    flex-direction: row-reverse;
                    gap: 24px;  
                }
            }

            > div:nth-child(2) {
                display: flex;
                flex-direction: column;
                gap: 10px;
                align-items: center;
            }
        }

        > section:nth-child(4) {
            display: flex;
            flex-direction: column;
            gap: 88px;

            > img:nth-child(1) {
                width: 200px;
            }

            > div:nth-child(2) {
                > img {
                    width: 331px;
                    margin-left: auto;
                }
            }

            > div:nth-child(3) {
                display: flex;
                flex-direction: column;
                gap: 32px;

                > div {
                    display: flex;
                    flex-direction: column;
                    gap: 24px;
                }
            }
        }
    }

    @media (width >= 431px) {
        main {
            > section {
                padding: 0 80px;
            }

            > section:nth-child(1) {
                > h1 {
                    font-size: var(--h1);
                }

                > div {
                    flex-direction: row;
                    gap: 360px;
                    justify-content: space-between;

                    > div > div > div:nth-child(1) {
                        margin-right: 48px;
                    }
                }
            }

            > section:nth-child(2) {
                margin-left: 204px;
            }

            > section:nth-child(3) {
                > div:nth-child(1) {
                    flex-direction: row;
                    justify-content: space-between;

                    > div {
                        flex-direction: column !important;
                        width: 20%;

                        > img {
                            height: auto;
                        }
                    }

                    > div:nth-child(even) {
                        margin-top: 80px;
                    }
                }
            }

            > section:nth-child(4) {
                flex-direction: row;
                justify-content: space-between;
                align-items: center;

                > img:nth-child(1) {
                    width: 300px;
                }

                > div:nth-child(2) {
                    > img {
                        width: 405px;
                        margin-left: 0;
                    }
                }   
            }
        }
    }

    
    @media (min-width: 431px) and (max-width: 1044px) {
        main {
            
            > section:nth-child(1) {
                > div {
                    gap: 80px;
                }
            }

            > section:nth-child(3) {
                > div:nth-child(1) {
                    flex-direction: column;
                    justify-content: initial;

                    > div {
                        flex-direction: row !important;
                        width: initial;

                        > img {
                            height: auto;
                        }
                    }

                    > div:nth-child(even) {
                        margin-top: initial;
                        flex-direction: row-reverse !important;
                    }
                }
            }

            > section:nth-child(4) {
                flex-direction: column;
                justify-content: initial;
                align-items: initial;

                > div:nth-child(2) {
                    > img {
                        margin-left: auto;
                    }
                }   
            }
        }
    }
</style>