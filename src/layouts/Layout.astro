---
//component imports
import Footer from '../components/Footer.astro';

// Props
interface Props {
	title: string;
}

const { 
	title,
} = Astro.props as Props;

//style imports
import '../styles/global.css'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<Footer />
	</body>
</html>

<style>
	body {
		margin: 24px;
	}
</style>

